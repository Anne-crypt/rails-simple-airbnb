<h1>All our flats</h1>

<div class="cards mt-4">
  <% @flats.each do |flat| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))')">
      <h2><%= flat.name %></h2>
      <p><%= flat.description %></p>
      <p><%= flat.price_per_night %><p>
    </div>
  <% end %>
</div>
